{
  "name": "social-media-platform",
  "version": "1.0.0",
  "description": "A simple social media platform using MERN stack",
  "main": "server.js",
  "scripts": {
  "start": "node server.js",
  "dev": "nodemon server.js",
  "client": "cd client && npm start",
  "devcon": "concurrently \"npm run dev\" \"npm run client\"",
  "test": "echo \"No tests specified\" && exit 0",

  "build": "npm install --prefix client && npm run build --prefix client",

  "heroku-postbuild": "npm install && cd client && npm install && npm run build"
},

  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "social-media",
    "mern",
    "mongodb",
    "react",
    "express"
  ],
  "author": "Your Name",
  "license": "MIT"
}
